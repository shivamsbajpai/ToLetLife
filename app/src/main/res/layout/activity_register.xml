<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
    <ProgressBar
        android:id="@+id/register_activity_circular_progress_load"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:progressTint="@color/button_color"
        />

    <TextView
        android:id="@+id/tv_register_activity_app_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:fontFamily="@font/bree_serif"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="ToLet Life"
        android:textColor="@color/tolet_logo"
        android:textSize="50sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/tv_register_activity_app_name"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/background_color"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/et_register_name"
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/input_text_color"
                android:backgroundTint="@color/edit_text_color"
                android:textColorHint="@color/input_hint_color" />
            <EditText
                android:id="@+id/et_register_phone_number"
                android:hint="Phone Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/input_text_color"
                android:backgroundTint="@color/edit_text_color"
                android:textColorHint="@color/input_hint_color" />
            <EditText
                android:id="@+id/et_register_email"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/input_text_color"
                android:backgroundTint="@color/edit_text_color"
                android:textColorHint="@color/input_hint_color" />
            <EditText
                android:id="@+id/et_register_otp"
                android:hint="OTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/input_text_color"
                android:backgroundTint="@color/edit_text_color"
                android:textColorHint="@color/input_hint_color" />
            <EditText
                android:id="@+id/et_register_password"
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:inputType="textPassword"
                android:textSize="20sp"
                android:textColor="@color/input_text_color"
                android:backgroundTint="@color/edit_text_color"
                android:textColorHint="@color/input_hint_color" />
            <EditText
                android:id="@+id/et_register_confirm_password"
                android:hint="Confirm Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:inputType="textPassword"
                android:textSize="20sp"
                android:textColor="@color/input_text_color"
                android:backgroundTint="@color/edit_text_color"
                android:textColorHint="@color/input_hint_color" />
            <TextView
                android:id="@+id/tv_register_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Error"
                android:textColor="@color/error_color"
                android:visibility="invisible"
                />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Register"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/button_color"
                android:background="@drawable/button_background"
                >
            </Button>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>